    {
      "id": "02f761e2-83c4-488b-91f4-f4ae11b15c00",
      "name": "AI Agent",
      "type": "@n8n/n8n-nodes-langchain.agent",
      "parameters": {
        "text": "={{ $json.finalPrompt }}",
        "options": {
          "systemMessage": "You are [Company]â€™s support assistant. Never say 'based on the document'."
